<?xml-stylesheet type="text/css" href="animated-lyrics.css" ?>

<svg width="100%" height="100%"
     xmlns="http://www.w3.org/2000/svg"
     xmlns:xml="http://www.w3.org/XML/1998/namespace"
     xmlns:xlink="http://www.w3.org/1999/xlink" onclick="if (audioLoaded) {$('instructions').setAttribute('display', 'none');}"
     externalResourcesRequired="true">
    <style>
        /*
         * This CSS file has been generated by fontsquirrel.com and is based
         * on the work of Paul Irish.
         * http://paulirish.com/2009/bulletproof-font-face-implementation-syntax/
         * The fonts included are copyrighted by the vendor listed below.
         *
         * @vendor:     Rotodesign
         * @vendorurl:  http://www.rotodesign.com
         * @licenseurl: http://www.fontsquirrel.com/license/Jinky
         */
        @font-face {
                font-family: 'jinky';
                src: url('../res/1.0/fonts/jinky/JINKY.eot');
                src: local('Jinky Regular'), local('Jinky-Regular'),
                     url('../res/1.0/fonts/jinky/JINKY.TTF') format('truetype');
        }
    </style>
     <rect x="0%" y="0%" width="100%" height="100%" fill="black" />

<svg width="800" height="550" viewBox="400 275 800 550"
     id="root" x="50%" y="50%"
     xmlns="http://www.w3.org/2000/svg"
     xmlns:xml="http://www.w3.org/XML/1998/namespace"
     xmlns:sw="http://www.svgopen.org/2004/svgWow"
     xmlns:xlink="http://www.w3.org/1999/xlink"
     onload="sw.init(); sw.animatedLyrics.init(); initLoadingAudio()"
     overflow="visible">

    <script xlink:href="../res/2.0/scripts/yui/yahoo-dom-event/yahoo-dom-event.js" />
    <script xlink:href="../res/2.0/scripts/yui/animation/animation-min.js" />
    <script xlink:href="../res/2.0/scripts/dom-utils.js" />
    <script xlink:href="../res/2.0/scripts/animation/animate.js" />
    <script xlink:href="audio-collection.js" />
    <script xlink:href="./music/annika/ancient-sun-lyrics.js" />
    <script xlink:href="animated-lyrics.js" />

    <!-- audio -->

    <!-- HTML 5 Audio -->
    <foreignObject width="200" height="100">
       <audio id="trackHTML5" autoplay="true" oncanplay="this.pause();" xmlns="http://www.w3.org/1999/xhtml" oncanplaythrough="onAudioReady();">
       <source src="music/annika/ancient-sun-snippet.ogg" />
       <source src="music/annika/ancient-sun-snippet.wav" />
       <source src="music/annika/ancient-sun-snippet.mp3" />
       </audio>
    </foreignObject>

    <defs>
        <clipPath id="viewportClip">
            <rect width="800" height="550" />
        </clipPath>

        <radialGradient id="backgroundFill" cx=".50"  cy="0.50" r="1"
            gradientUnits="objectBoundingBox">
            <stop offset="0" stop-color="rgb(244,159,155)" />
            <stop offset="0.5" stop-color="rgb(109,0,38)" />
            <stop offset="1" stop-color="black" />
        </radialGradient>

        <linearGradient id="attributionsFill" x1="0" y1="0" x2="0" y2="1"
            gradientUnits="objectBoundingBox">
            <stop offset="0" stop-color="black" stop-opacity="0.7"/>
            <stop offset="1" stop-color="black" stop-opacity="0.2" />
        </linearGradient>

        <linearGradient id="attributionsStroke" x1="0" y1="0" x2="1" y2="1"
            gradientUnits="objectBoundingBox">
            <stop offset="0" stop-color="black" stop-opacity="0.1"/>
            <stop offset="1" stop-color="black" stop-opacity="0.8" />
        </linearGradient>

        <!--
            Attribution:
            Background pattern created with a gradient and the WC-Rhesus-Bta
            font: http://www.fontsquirrel.com/license/WC-Rhesus-Bta.
        -->
    <path id="linePath" d="M -400 0 Q -300 -100 -200 0 Q -100 100 0 0
                               Q 100 -100 200 0 Q 300 100 400 0" />


        <pattern id="imagePattern" patternUnits="userSpaceOnUse" x="0" y="0"
                 width="800" height="550" >
            <image xlink:href="background.png" width="800" height="550" />
        </pattern>

    </defs>

    <g clip-path="url(#viewportClip)">
        
        <rect id="bgFill" fill="url(#imagePattern)" rx="10" ry="10"
                width="100%" height="100%" onload="onBackgroundLoad();"/>
        <rect id="cast" fill="black" fill-opacity="0.75"
                width="100%" height="100%"/>

        <defs>
        </defs>

        <g id="credits" class="credits" transform="translate(400, -110)">
            <g transform="translate(-115,-50)">
                <rect rx="5" ry="5" fill="black" fill-opacity="0.5"
                      width="230" height="60" />
                <image xlink:href="annika.jpg" width="40" height="40"
                        x="10" y="10"/>
                <text x="60" y="20" class="h1">song: ancient sun</text>
                <text x="60" y="35"
                        class="h2">by annika williams - sept 2009</text>
            </g>
        </g>
        <g id="credits2" class="credits" transform="translate(400, 600)">
            <g transform="translate(-115,-50)">
                <rect rx="5" ry="5" fill="black" fill-opacity="0.5"
                      width="230" height="60" />
                <image xlink:href="annika2.jpg" width="40" height="40"
                        x="10" y="10"/>
                <text x="60" y="20" class="h1">song: hold on rough</text>
                <text x="60" y="35" class="h2"
                    style="fill:#DB7093">by annika williams - sept 2009</text>
            </g>
        </g>

        <g text-anchor="middle" fill="white" stroke="white"
           transform="translate(400,275)" id="beats">
        </g>

        <g text-anchor="middle" fill="white" fill2="rgb(254,187,6)" stroke="none"
           font-size="30"
           font-family="jinky,'Myriad Pro', Myriad, Helvetica, sans-serif"
           font-weight="bold"
           transform="translate(320,240)" id="songText">
        </g>

        <g transform="translate(400,275)">
            <g id="attributionsGroup" >
            </g>
        </g>

    </g>

    <g id="loadingAudioMessage" fill="white" opacity="1" transform="translate(400,225)">
        <rect x="-70" y="-25" width="140" height="70" fill="black"
              fill-opacity="0.25" rx="5" ry="5" stroke="white"
              stroke-opacity="0.25" stroke-width="2"/>
        <g id="loadingAudio">
            <circle id="waitSpoke" cx="10" r="2" />
            <use xlink:href="#waitSpoke" transform="rotate(30)" opacity="0.05"/>
            <use xlink:href="#waitSpoke" transform="rotate(60)" opacity="0.1"/>
            <use xlink:href="#waitSpoke" transform="rotate(90)" opacity="0.2"/>
            <use xlink:href="#waitSpoke" transform="rotate(120)" opacity="0.3"/>
            <use xlink:href="#waitSpoke" transform="rotate(150)" opacity="0.4"/>
            <use xlink:href="#waitSpoke" transform="rotate(180)" opacity="0.5"/>
            <use xlink:href="#waitSpoke" transform="rotate(210)" opacity="0.6"/>
            <use xlink:href="#waitSpoke" transform="rotate(240)" opacity="0.7"/>
            <use xlink:href="#waitSpoke" transform="rotate(270)" opacity="0.8"/>
            <use xlink:href="#waitSpoke" transform="rotate(300)" opacity="0.9"/>
            <use xlink:href="#waitSpoke" transform="rotate(330)" opacity="1"/>
        </g>
        <text font-family="Verdana" font-size="12" fill="white"
              y="30"
              text-anchor="middle">loading audio...</text>
     </g>

</svg>

    <g id="instructions" font-family="Arial,Helvetica,sans-serif"
        font-weight="bold" text-anchor="middle" display="none" opacity="0">
        <text x="50%" y="50%" fill="white" >
                <tspan>click to start</tspan>
                <tspan x="50%" dy="1em">(then click again)</tspan>
        </text>
    </g>



</svg>
